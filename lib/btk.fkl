(library
  btk
  (export
    remove-file
    set-chanl-buf-size
    getch
    sleep
    usleep
    srand
    rand
    time
    get-time)
  (define btk (dlopen (append (getdir) "/../btk")))
  (define remove-file (dlsym btk "btk_remove_file"))
  (define set-chanl-buf-size (dlsym btk "btk_set_chanl_buffer_size"))
  (define getch (dlsym btk "btk_getch"))
  (define sleep (dlsym btk "btk_sleep"))
  (define usleep (dlsym btk "btk_usleep"))
  (define srand (dlsym btk "btk_srand"))
  (define rand (dlsym btk "btk_rand"))
  (define get-time (dlsym btk "btk_get_time"))
  (define time (dlsym btk "btk_time"))
  )
